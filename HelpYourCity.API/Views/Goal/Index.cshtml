@model IEnumerable<HelpYourCity.Core.Entities.Goal>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    @* <a asp-action="Create">Create New</a> *@
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoalItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPublished)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalItemName)
            </td>
            <td>
                @(item.PricePerUnit + "$")
            </td>
            <td>
                            @Html.DisplayFor(modelItem => item.IsPublished)</td>
            <td>
                <a asp-action="Edit" asp-route-goalId="@item.Id">Edit</a>
              <br>
                @if (item.NumberOfDonations >= item.Target && item.Target!=0)
                {
                    <a asp-action="SendEmails" asp-route-id="@item.Id">Send Email To Volunteers</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>